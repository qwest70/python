import random
name= str(input('Как твоё имя? '))
hello = input('Привет ' + name + ', я магический шар и я от балды могу "предсказать тебе будущее", какой твой вопрос? ')
answer = ["Бесспорно", "Предрешено", "Никаких сомнений", "Определённо да", "Можешь быть уверен в этом",
          "Мне кажется - да", "Вероятнее всего", "Хорошие перспективы", "Знаки говорят - да", "Да",
          "Пока неясно, попробуй снова", "Спроси позже", "Лучше не рассказывать", "Сейчас нельзя предсказать",
          "Сконцентрируйся и спроси опять", "Даже не думай", "Мой ответ - нет", "По моим данным - нет",
          "Перспективы не очень хорошие", "Весьма сомнительно"]

def magic_ball():
    print(random.choice(answer))

while True:
    magic_ball()
    print('Задайте еще вопрос, если есть, а если нет, введите "нет"')
    one_more = input()
    if one_more == 'нет' or one_more == 'Нет':
        print('До встречи!')
        break
    else:
        continue
